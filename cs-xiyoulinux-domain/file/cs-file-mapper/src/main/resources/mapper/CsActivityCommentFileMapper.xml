<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiyoulinux.file.mapper.CsActivityCommentFileMapper">

    <resultMap id="BaseMap" type="com.xiyoulinux.file.pojo.CsActivityCommentFile">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="commentId" column="comment_id" jdbcType="VARCHAR"/>
        <result property="commentFileUrl" column="comment_file_url" jdbcType="VARCHAR"/>
        <result property="activityId" column="activity_id" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectAllByCommentIdList" resultMap="BaseMap">
        select comment_id,comment_file_url from cs_activity_comment_file where comment_id in
        <foreach collection="commentIdList" item="commentId" open="(" close=")" separator=",">
            #{commentId}
        </foreach>
    </select>

    <delete id="delByCommentId">
        delete
        from cs_activity_comment_file
        where comment_id = #{commentId,jdbcType=VARCHAR}
    </delete>

    <delete id="delCommentByActivityId">
        delete
        from cs_activity_comment_file
        where activity_id = #{activityId,jdbcType=VARCHAR}
    </delete>

</mapper>