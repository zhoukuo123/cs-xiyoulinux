<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiyoulinux.mapper.CsUserActivityMapper">

    <resultMap id="BaseResultMap" type="com.xiyoulinux.entity.CsUserActivity">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="user_id" column="user_id" jdbcType="VARCHAR"/>
        <result property="dynamic_content" column="dynamic_content" jdbcType="VARCHAR"/>
        <result property="dynamic_create_time" column="dynamic_create_time" jdbcType="TIMESTAMP"/>
        <result property="dynamic_is_solve" column="dynamic_is_solve" jdbcType="INTEGER"/>
        <result property="dynamic_type" column="dynamic_type" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,user_id,dynamic_content,
        dynamic_create_time,dynamic_is_solve,dynamic_type
    </sql>
    <select id="selectOneWeek" resultMap="BaseResultMap">
        select *
        from cs_user_dynamic
        where dynamic_create_time corder by dynamic_create_time DESC;
    </select>
    <select id="selectByUserId" resultMap="BaseResultMap">
        select *
        from cs_user_dynamic
        where user_id = #{userId}
        order by dynamic_create_time DESC;
    </select>
</mapper>
